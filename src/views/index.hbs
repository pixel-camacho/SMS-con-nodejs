<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="tel" id="phone" name="phone" class="form-control" placeholder="+5268643790"
                    autocomplete="off" autofocus>
            </div>
            <div class="form-group">
                <textarea id="message" name="message" cols="30" rows="5" class="form-control"
                    placeholder="Escribe tu mensaje">
                </textarea>
            </div>
            <button class="btn btn-primary btn-block">
                Enviar
            </button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
        <ul class="list-group" style="height: 70vh; overflow-y:auto;">
            {{#each messages}}
        <div class="list-group-item list-group-item-warning list-group-item-action">
            <p>{{Body}}</p>
            <span>{{ hideNumber To}}</span>
            <span>{{hideNumber From}}</span>
        </div>
        {{/each}}
        </ul>
        {{else}}
        <p>No messages yet</p>
        {{/if}}
    </div>
</div>